<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </div>
  <br>
  <div class="field">
    <%= f.label :height, "Height (in inches)" %> <br>
    <%= f.number_field :height %>
  </div>
  <br>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
  </div>
  <div class="field">
    <%= f.label :happiness, "How happy are you? (1-5 scale)" %> <br>
    <%= f.number_field :happiness %>
  </div>
  <br>
  <div class="field">
    <%= f.label :nausea, "How nauseous are you? (1-5 scale)" %> <br>
    <%= f.number_field :nausea %>
  </div>
  <br>
  <div class="field">
    <%= f.label :tickets, "How many dollars are in your pocket?" %> <br>
    <%= f.number_field :tickets %>
  </div>
  <br>
  <div class="field">
    <%= f.label :admin, "Check box if you are a theme park owner" %>
    <%= f.check_box :admin %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
